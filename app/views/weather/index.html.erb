<h3>Enter an American State Zipcode to check its local weather conditions</h3>
<%= simple_form_for @weather, :url => query_path, :method => 'get' do |f| %>
	<%= f.input :zipcode, :label => 'Enter Zipcode (Use "94111" for a valid zipcode to try)' %>
	<%= f.submit "Submit", :class => 'btn btn-success', :disable_with => 'Submitting...' %>
<% end %>